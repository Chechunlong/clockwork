Counter MACHINE {

	start WHEN counter == 0;
	one WHEN counter == 1;
	two WHEN SELF.counter == 2;
	init DEFAULT;

	ENTER init { LOG "unknown"; counter := 0; }

	ENTER start { LOG "start"; INC counter }
	ENTER one { LOG "one"; INC counter}
	ENTER two { LOG "two"; INC counter}
	ENTER three { LOG "three"; INC counter }

}

counter Counter(tab:Counter);

